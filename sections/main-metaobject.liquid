{% comment %}
  Esta es la secci√≥n principal para mostrar metaobjects
{% endcomment %}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="metaobject-container">
    {% if metaobject.imagen.value != blank %}
      <div class="metaobject-image">
        {{ metaobject.imagen.value }}
      </div>
    {% endif %}

    {% if metaobject.titulo.value != blank %}
      <h1 class="metaobject-title">{{ metaobject.titulo.value }}</h1>
    {% endif %}

    {% if metaobject.descripcion.value != blank %}
      <div class="metaobject-description rte">
        {{ metaobject.descripcion.value }}
      </div>
    {% endif %}

    {% if metaobject.caracteristicas.value != blank %}
      <div class="metaobject-features">
        {{ metaobject.caracteristicas.value }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-metaobject.name",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}

<style>
.metaobject-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.metaobject-image {
  margin-bottom: 2rem;
}

.metaobject-title {
  font-size: 2rem;
  margin-bottom: 1.5rem;
}

.metaobject-description {
  margin-bottom: 2rem;
  line-height: 1.6;
}

.metaobject-features {
  background: #f7f7f7;
  padding: 20px;
  border-radius: 8px;
}
</style>
